@model IEnumerable<SliderInfo>
@{
    ViewData["Title"] = "Index";
}


<div class="container my-5">
    @if(Model.Count() == 0){
          <a class="btn btn-success" style="float: right;" asp-action="Create">Create</a>
    }
    else
    {
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var sliderInfo in Model)
                {
                    <tr>
                        <td class="py-1">
                            <div class="image">
                                    <img src="~/img/@sliderInfo.SignatureImage" alt="image" />

                            </div>
                        </td>
                        <td>
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@sliderInfo.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@sliderInfo.Id">Edit</a>

                            <form asp-action="Delete" asp-route-id="@sliderInfo.Id" method="post" style="display: inline-block">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </td>

                    </tr>
                }


            </tbody>
        </table>
    </div>
    }

    

</div>

@section Scripts{
    <script src="~/Admin/js/admin.js"></script>
}



